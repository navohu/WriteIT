<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_preview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1" >


    <RelativeLayout
        android:id="@+id/rellay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageButton
            android:id="@+id/btnButton1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/camerabutton"
            android:onClick="takePhoto"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


        <ImageButton
            android:id="@+id/btnsendphotos"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/confirm"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btnButton1"
            android:layout_marginLeft="20dp" />




        <View
            android:id="@+id/myRectangleView1"
            android:layout_width="40dp"
            android:layout_height="50dp"

            android:background="@drawable/rectangle_photo"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="30dp"/>
        <View
            android:id="@+id/myRectangleView2"
            android:layout_width="40dp"
            android:layout_height="50dp"

            android:background="@drawable/rectangle_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="80dp" />

        <View
            android:id="@+id/myRectangleView3"
            android:layout_width="40dp"
            android:layout_height="50dp"

            android:background="@drawable/rectangle_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp" />
        <View
            android:id="@+id/myRectangleView4"
            android:layout_width="40dp"
            android:layout_height="50dp"

            android:background="@drawable/rectangle_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp" />


        <ImageView
            android:id="@+id/lastPic1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/lastPic2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/lastPic3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/lastPic4"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="1" />

    </RelativeLayout>


</FrameLayout>